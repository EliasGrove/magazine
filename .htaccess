# Enable URL rewriting
RewriteEngine On

# Force trailing slash removal for consistency
RewriteCond %{REQUEST_URI} /(.+)/$
RewriteRule ^(.+)/$ /$1 [R=301,L]

# Handle home page - redirect index.html to root
RewriteCond %{THE_REQUEST} /index\.html [NC]
RewriteRule ^ /? [NC,L,R=301]

# Redirect .html URLs to clean URLs (301 permanent redirect)
RewriteCond %{THE_REQUEST} /([^.]+)\.html [NC]
RewriteRule ^ /%1? [NC,L,R=301]

# Remove .html extension from URLs when accessing pages
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteRule ^([^\.]+)$ $1.html [NC,L]

# Security: Block access to sensitive files
<Files ~ "^\.(htaccess|htpasswd|env)$">
    Order allow,deny
    Deny from all
</Files>

